CPP		:= c++
FLAGS	:= -std=c++98 -Wall -Wextra -Werror
SRC		:= main.cpp \
			AMateria.cpp \
			Character.cpp \
			Ice.cpp \
			Cure.cpp \
			MateriaSource.cpp
OBJ		:= $(SRC:.cpp=.o)
HPP		:= AMateria.hpp \
			Character.hpp \
			Ice.hpp \
			Cure.hpp \
			ICharacter.hpp \
			IMateriaSource.hpp \
			MateriaSource.hpp
EXEC	:= Materia

all: $(EXEC)

$(EXEC): $(OBJ)
	$(CPP) $(FLAGS) $^ -o $@

%.o: %.cpp $(HPP)
	$(CPP) $(FLAGS) -c $< -o $@

clean:
	rm -f *.o

fclean: clean
	rm -f $(EXEC)

re: fclean
	make

.PHONY: all, clean, fclean, re
